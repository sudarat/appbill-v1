<head>
<script> 
function clearText(thefield){
 if (thefield.defaultValue==thefield.value)
 thefield.value = ""
 } 
 </script>
</head>

<%= form_for ([@customer,@invoice,@invoice.invoicedescrips.build]) do |ides| %>

  <div class = "field">
    <%= ides.text_field :description ,:size => "37",:value=>"Description", :onFocus=>"clearText(this)"%>&nbsp;&nbsp;&nbsp;
    <%= ides.text_field :quantity ,:size => "7" ,:value=>"Quantity", :onFocus=>"clearText(this)"%>&nbsp;&nbsp;&nbsp;
    <%= ides.text_field :unit_price ,:size => "7" ,:value=>"Unit price", :onFocus=>"clearText(this)" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= ides.submit "create",:class => "submit"%>
  </div>
<% end %>