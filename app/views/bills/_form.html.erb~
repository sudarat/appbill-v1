<%= form_for([@customer, @customer.bills.build]) do |b| %>
  <% if @bill.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bill.errors.count, "error") %> prohibited this invoice from being saved:</h2>

      <ul>
      <br />
      <% @bill.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= b.label :bill_title , 'Project title'%><br />
    <%= b.text_field :bill_title %>
  </div>

  <div class = "actions">
    <%= b.submit %>
  </div>
<% end %>