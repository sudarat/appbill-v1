<h1>แก้ไขโปรเจค</h1>
<% flash .each do |key, value| %>
  <% if value ==  "Description Error." %>
  <%= content_tag(:div, value, :class => "descrip") %>
  <% else %>
  <%= content_tag(:div, value, :class => "flash #{key}") %> 
  <% end %>
<% end %>

<%= form_for([@customer, @quotation]) do |q| %>

  <% if @quotation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@quotation.errors.count, "error") %> prohibited this quotation from being saved:</h2>

      <ul>
      <br />
      <% @quotation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= q.label :customer_id , 'Customer id'%><br />
    <%= q.text_field :customer_id %>
  </div>
  <div class="field">
    <%= q.label :title , 'Project title'%><br />
    <%= q.text_field :title %>
  </div>
  <div class="field">
    <%= q.label :detail %><br />
    <%= q.text_field :detail %>
  </div>
  <div class="field">
    <%= q.label :terms %><br />
    <%= q.text_field :terms %>
  </div>
  <div class="field">
    <%= q.label :condition %><br />
    <%= q.text_field :condition %>
  </div>

  <div class = "actions">
    <%= q.submit %>
  </div>
<% end %>


