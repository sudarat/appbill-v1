<h1>Edit invoice</h1>

<% flash .each do |key, value| %>
  <% if value ==  "Description Error." %>
  <%= content_tag(:div, value, :class => "descrip") %>
  <% else %>
  <%= content_tag(:div, value, :class => "flash #{key}") %> 
  <% end %>
<% end %>

<%= form_for([@customer, @invoice]) do |i| %>

  <% if @invoice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

      <ul>
      <br />
      <% @invoice.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= i.label :customer_id , 'Customer id'%><b> : </b>
    <%= i.collection_select(:customer_id, Customer.all, :id,:name) %>
  </div>

  <div class="field">
    <%= i.label :title , 'Project title'%><b> : </b>
    <%= i.text_field :title %>
  </div>

  <div class = "actions">
    <%= i.submit %>
  </div>
<% end %>


