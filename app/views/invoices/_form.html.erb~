<%= form_for([@customer, @customer.invoices.build]) do |i| %>
 <% if @invoice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

      <ul>
      <br />
      <% @invoice.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= i.label :inv_title , 'Project title'%><br />
    <%= i.text_field :inv_title%>
  </div>

  <div class = "actions">
    <%= i.submit %>
  </div>
<% end %>