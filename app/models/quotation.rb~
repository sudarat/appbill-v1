class Quotation < ActiveRecord::Base
  belongs_to :customer
  has_many :quotadescrips
  
  validates_presence_of :title,:detail,:terms
  
  #validate do |quotation|
  #  quotation.errors.add_to_base("Project Title can't be blank") if quotation.quo_title.blank?
  #end
  
    
  def details_html
    html = ""
    
    quotadescrips.each do |detail|
	html += "<tr valign= top >
		  <td class=bordertop borderright><font size=2>#{detail.qd_descrip}</font></td> 
		  <td class=borderdetail><font size=2>#{detail.qd_quantity}</font></td> 
		  <td align= right class=borderdetail><font size=2>#{detail.qd_unitprice}</font></td> 
		  <td align= right class=bordertop borderleft><font size=2>#{detail.qd_unitprice*detail.qd_quantity}</font></td>
		 </tr>"
    end
    
    return html
  end
  
   def subtotal_html
    subtotal = 0
    
    quotadescrips.each do |detail|
	subtotal += detail.qd_unitprice*detail.qd_quantity
    end
    
    return subtotal
  end
  
  def tax_html
    tax = 0
    
    quotadescrips.each do |detail|
	tax += detail.qd_unitprice*detail.qd_quantity
    end
    
    tax = (tax * 7)/100
    
    return tax
  end
  
  def total_html
    total = 0
    
    quotadescrips.each do |detail|
	total += detail.qd_unitprice*detail.qd_quantity
    end
    
    total = total + ((total * 7)/100)
    
    return total
  end
  
end
